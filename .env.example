# TTS Gateway Configuration

# Gateway Settings
PORT=8000
DEBUG=false
LOG_LEVEL=info

# Model Endpoints (for local development)
KOKKORO_ENDPOINT=http://kokkoro:8001
CHATTERBOX_ENDPOINT=http://chatterbox:8002

# RunPod Settings (for production deployment)
# KOKKORO_ENDPOINT=https://api.runpod.ai/v2/kokkoro-endpoint-id/runsync
# CHATTERBOX_ENDPOINT=https://api.runpod.ai/v2/chatterbox-endpoint-id/runsync
# RUNPOD_API_KEY=your-runpod-api-key

# Request Settings
DEFAULT_TIMEOUT=60.0
MAX_RETRIES=3

# Security (for production)
# API_KEY=your-secure-api-key
# ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Optional: Redis for caching
# REDIS_URL=redis://redis:6379/0

# Optional: Monitoring
# PROMETHEUS_ENABLED=true
# PROMETHEUS_PORT=9090

# Model-Specific Settings
# KOKKORO_MAX_TEXT_LENGTH=1000
# CHATTERBOX_MAX_TEXT_LENGTH=2000

# Logging
# LOG_FILE=/app/logs/gateway.log
# LOG_FORMAT=json
